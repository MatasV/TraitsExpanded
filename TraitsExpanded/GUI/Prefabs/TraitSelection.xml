<Prefab>
  <Constants>
    <Constant Name="TS.Window.Height" Value="700" />
    <Constant Name="TS.Window.Width" Value="1200" />

    <Constant Name="TS.SelectionBox.Height" Value="260" />
    <Constant Name="TS.SelectionBox.Width" Value="800" />
    <Constant Name="TS.SelectionBox.MarginTop" Value="90" />
    <Constant Name="TS.SelectionBox.MarginLeft" Value="30" />
    <Constant Name="TS.SelectionBox.MarginBottom" Value="60" />

    <Constant Name="TS.RightBox.MarginLeft" Value="240" />
    <Constant Name="TS.RightBox.MarginRight" Value="65" />

  </Constants>
  <Window>
    <Widget WidthSizePolicy = "CoverChildren" HeightSizePolicy = "CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Children>
        <Widget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="!TS.Window.Height" SuggestedWidth="!TS.Window.Width" MarginTop="50" HorizontalAlignment="Center" Brush="Recruitment.Frame">
          <Children>

            <!-- Horizontal List -->
            <ListPanel Id="ListPanel" DoNotAcceptEvents="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" LayoutImp.LayoutMethod="HorizontalLeftToRight">
              <Children>

                <!-- Trait Selection List -->
                <ListPanel Id="ListPanel" DoNotAcceptEvents="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" LayoutImp.LayoutMethod="VerticalBottomToTop" MarginTop="!TS.SelectionBox.MarginTop" MarginLeft="!TS.SelectionBox.MarginLeft" MarginBottom="!TS.SelectionBox.MarginBottom">
                  <Children>

                    <!-- Positive Traits -->
                    <Widget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="!TS.SelectionBox.Width" SuggestedHeight="!TS.SelectionBox.Height" Brush="GameMenu.Tournament.Frame">
                      <Children>
                        <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="20" MarginLeft="0" Text="Test1" Brush="CenterAlignedMediumFont"/>
                        <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="100" MarginLeft="0" Text="Test2" Brush="CenterAlignedSmallFont"/>
                      </Children>
                    </Widget>

                    <!-- Negative Traits -->
                    <Widget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="!TS.SelectionBox.Width" SuggestedHeight="!TS.SelectionBox.Height" Brush="GameMenu.Tournament.Frame" MarginTop="20">
                      <Children>
                        <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="20" MarginLeft="0" Text="Test1" Brush="CenterAlignedMediumFont"/>
                        <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="100" MarginLeft="0" Text="Test2" Brush="CenterAlignedSmallFont"/>
                      </Children>
                    </Widget>

                  </Children>
                </ListPanel>

                <!-- Right Bar -->
                <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="GameMenu.Tournament.Frame" MarginLeft="!TS.RightBox.MarginLeft" MarginRight="!TS.RightBox.MarginRight" MarginTop="!TS.SelectionBox.MarginTop" MarginBottom="70">
                  <Children>
                    <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="20" MarginLeft="0" Text="Test1" Brush="CenterAlignedMediumFont"/>
                    <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="100" MarginLeft="0" Text="Test2" Brush="CenterAlignedSmallFont"/>
                  </Children>
                </Widget>

              </Children>
            </ListPanel>

          </Children>
        </Widget>
    
        <!--Close Screen Button// Parameter.DoneButtonAction="ExecuteClose"-->
        <Standard.DialogCloseButtons Parameter.DoneButtonAction="ExecuteDone" VerticalAlignment="Bottom" Parameter.DoneButtonText="Done" Parameter.ShowCancel="false" MarginBottom="20" />
      </Children>
    </Widget>
  </Window>
</Prefab>